# Environment Variables for Elections 2025 DApp
# Copy this file to .env and fill in your values

# Deployment Private Key (for both local and testnet deployments)
# For local testing, you can use a Hardhat test account private key
# For Sepolia, use your actual wallet private key
PRIVATE_KEY=your_private_key_here

# Network Configuration
SEPOLIA_RPC_URL=https://ethereum-sepolia.blockpi.network/v1/rpc/public
LOCAL_RPC_URL=http://127.0.0.1:8545

# API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Gas Reporting
REPORT_GAS=false

# Contract Configuration
VOTE_REWARD=1000000000000000000  # 1 BAL token (1e18 wei)

# Election Timing (in seconds from deployment)
ELECTION_START_DELAY=3600        # Start 1 hour after deployment
ELECTION_DURATION=86400          # Run for 24 hours (1 day)

# Election Configuration
ELECTION_NAME="Test Election 2025"
ELECTION_DESCRIPTION="A test election for the Elections 2025 DApp"
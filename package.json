{
  "name": "elections-2025-dapp",
  "version": "1.0.0",
  "description": "Ethereum-compatible election DApp with Merkle tree voter verification and ERC-20 rewards",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "lint": "eslint . --ext .ts,.js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .ts,.js --ignore-path .gitignore --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\" --ignore-path .gitignore",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:complete:local": "hardhat run scripts/deployComplete.ts --network localhost",
    "deploy:complete:sepolia": "hardhat run scripts/deployComplete.ts --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "merkle:build": "ts-node tools/buildMerkleTree.ts",
    "merkle:build:custom": "ts-node tools/buildMerkleTree.ts --input",
    "demo:airdrop": "hardhat run scripts/airdropDemo.ts --network hardhat",
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "web:install": "cd web && npm install",
    "verify:all": "npm run compile && npm run lint && npm run test && npm run coverage"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@swc/core": "^1.13.5",
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "chai": "^4.3.8",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "hardhat": "^2.17.2",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1",
    "merkletreejs": "^0.3.11"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "hardhat",
    "election",
    "voting",
    "merkle-tree",
    "erc20"
  ],
  "author": "Elections-2025 Team",
  "license": "MIT"
}
